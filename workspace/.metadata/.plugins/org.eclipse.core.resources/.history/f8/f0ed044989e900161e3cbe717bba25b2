<script>

var canvas = document.getElementById("myCanvas");
var ctx = canvas.getContext("2d");

<!--> initial draw </!-->
ctx.fillStyle = "#FF0000";
ctx.fillRect(0,300,5,5);

drawRect(0+5, 300);

function drawRect(x, y) {
	ctx.fillStyle = "#FF0000";
	ctx.fillRect(x,y,5,5);
}


var x = 0;
var y = 300;


var timer = setInterval(, 1000);
var drawer = function() {
	drawRect(x, y);
}

</script>

