class Book {
	constructor() {
		this.BookID = Math.floor((Math.random() * 999) + 100); //3 digit ID
		
		//move to local storage (?)
		this.borrowedBy = "nil";
		this.available = 1;
	}
}


//primary operative
var view = window.location.search.substring(1);

$(document).ready(function() {
	$("#librarian").hide();
	$("#undergrad").hide();
});

if(view.localeCompare("librarian")) {
	$("#librarian").show();
	$("#librarian").css("color", "red");
} else if(view.localeCompare("undergraduate")) {
	$("#undergrad").show();
	$("#undergrad").css("color", "red");
}



